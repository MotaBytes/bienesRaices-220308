extends ../layout/index 

block content
    div.py-10
        h1.text-center.text-4xl.my-10.font-extrabold.text-grayP Real 
            span.font-normal.text-black State 
        h2.text-center.text-3xl.font-extrabold= page 

        if errors 
            div(class="max-w-md mx-auto my-10")
                each error in errors 
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
        .mt-8.mx-auto.max-w-xl 
            .bg-white.py-8.px-4.shadow-xl.rounded-lg 
                form.space-y-5(action="/login/register" method="POST" noValidate)
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="name") Name: 
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-sm.place-holder-gray-40(placeholder="Add name" name="name" required)
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="email") Email: 
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-sm.place-holder-gray-40(placeholder="user@domain.com" name="email" type="email" required)
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="password") Password: 
                        input#password.w-full.px-3.py2.border.border-gray-300.rounded-sm.place-holder-gray-400(placeholder="▪▪▪▪▪▪▪▪▪" name="password" type="password" required)
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="recovery-password") Confirm password: 
                        input#password.w-full.px-3.py2.border.border-gray-300.rounded-sm.place-holder-gray-400(placeholder="▪▪▪▪▪▪▪▪▪" name="recovery-password" type="password" required)

                    div     
                        input#button_login.w-full.bg-indigo-600.text-white.font-bold.py-3.rounded-xl(class="hover:bg-rojoP cursor-pointer" type="submit" value="Login")

                    div.flex.items.center.justify-between.pt-5
                        a.text-sm.text-gray-400(href="/login" class="hover:underline decoration-rojoS") Have you an account? Login
                        a.text-sm.text-gray-400(href="/login/recovery" class="hover:underline decoration-rojoS") Forgot your password? Recover It