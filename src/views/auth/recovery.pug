extends ../layout/index 
block content 
    div.py-10 
        h1.text-center.text-4xl.my-10.font-extrabold.text-grayP Real 
            span.font-normal.text-black State 
        h2.text-center.text-3xl.font-extrabold= page 

        if errors 
            div(class="max-w-md mx-auto my-10")
                each error in errors 
                    p.bg-morEva.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-xl
            .bg-white.py-8.px-4.shadow-x1.rounded-1g
